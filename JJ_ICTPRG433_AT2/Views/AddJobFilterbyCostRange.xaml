<Window x:Class="JJ_ICTPRG433_440_AT2.Views.AddJobFilterbyCostRange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JJ_ICTPRG433_440_AT2.Views"
        mc:Ignorable="d"
        Title="Add Cost Range" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Minimum Cost (Inclusive)" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="26" Width="200" HorizontalContentAlignment="Center"/>
        <Label Content="Maximum Cost (Inclusive)" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="26" Width="200" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TextBoxMinCostRange" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Margin="50,0,0,0" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="24" Width="80"/>
        <TextBox x:Name="TextBoxMaxCostRange" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,50,0" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="24" Width="80"/>
        
        <Button x:Name="ButtonAddCostRangeSave" Content="Save" Grid.Row="5" Grid.Column="0" Height="25" Width="60" HorizontalAlignment="Right" Margin="0,0,5,0" VerticalAlignment="Center" IsDefault="True" Click="ButtonAddCostRangeSave_Click"/>
        <Button x:Name="ButtonAddCostRangeCancel" Content="Cancel" Grid.Row="5" Grid.Column="1" Height="25" Width="60" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" IsCancel="True" Click="ButtonAddCostRangeCancel_Click"/>

    </Grid>
</Window>
