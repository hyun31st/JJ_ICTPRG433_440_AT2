<Window x:Class="JJ_ICTPRG433_440_AT2.AddJob"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JJ_ICTPRG433_440_AT2"
        mc:Ignorable="d"
        Title="Add a Job" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Title" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,5,0" VerticalAlignment="Center" Height="26" Width="100" HorizontalContentAlignment="Right"/>
        <Label Content="Cost" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,5,0" VerticalAlignment="Center" Height="26" Width="100" HorizontalContentAlignment="Right"/>
        
        <TextBox x:Name="TextBoxJobTitle" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="5,0,0,0" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="24" Width="200"/>
        <TextBox x:Name="TextBoxJobCost" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="5,0,0,0" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="24" Width="200"/>
        
        <Button x:Name="ButtonAddJobSave" Content="Save" Grid.Row="4" Grid.Column="0" Height="25" Width="60" HorizontalAlignment="Right" Margin="0,0,5,0" Click="ButtonAddJobSave_Click" IsDefault="True"/>
        <Button x:Name="ButtonAddJobCancel" Content="Cancel" Grid.Row="4" Grid.Column="1" Height="25" Width="60" HorizontalAlignment="Left" Margin="5,0,0,0" Click="ButtonAddJobCancel_Click" IsCancel="True"/>
    </Grid>
</Window>
